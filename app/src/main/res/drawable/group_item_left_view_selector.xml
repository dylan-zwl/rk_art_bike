<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
      <item android:state_pressed="true"  android:right="-2dp">
          <shape>
                 <!-- 内部颜色 -->
            <solid android:color="@color/group_item_left_view_press" />

            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/group_item_stroke_press" />
        </shape>
      </item>  
      
      
    <item android:state_pressed="false"   android:right="-2dp">
     <shape>
                 <!-- 内部颜色 -->
            <solid android:color="@color/group_item_left_view_normal" />

            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/group_item_stroke_normal" />
        </shape>
    </item>   

</selector>
