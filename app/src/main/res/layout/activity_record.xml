<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/background_top"
    android:orientation="vertical"
    android:padding="60px" >

    <LinearLayout
        android:id="@+id/record_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="@string/record_datetime"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/record_data_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/record_time"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/record_data_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/record_distance"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/record_data_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/record_calorie"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/record_data_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/record_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/statistics_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/record_data_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/record_data_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/record_data_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_calorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/record_data_size"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/record_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/record_statistics"
        android:layout_below="@id/record_title"
        android:layout_marginTop="20dp"
        android:divider="@null"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>