<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/group_color_blue"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_public_rank"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="22dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/group_text_color"
        android:textSize="@dimen/textsize20" 
        android:visibility="gone"
        />

    <com.tapc.platform.witget.CircleImageView
        android:id="@+id/civ_public_avatar"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_head_portrait_normal"
        app:border_color="#ACAAAB"
        app:border_width="0.5dp" />

    <TextView
        android:id="@+id/tv_public_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/group_text_color"
        android:textSize="@dimen/textsize20" />

    <TextView
        android:id="@+id/tv_public_data"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="189dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/group_text_color"
        android:textSize="@dimen/textsize20" />

</LinearLayout>