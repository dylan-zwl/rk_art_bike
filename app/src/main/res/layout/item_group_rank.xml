<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@drawable/group_item_rank_shape"
    android:orientation="horizontal" >

    <View
        android:id="@+id/view_item_left"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:background="@drawable/group_item_rank_left_view_layer"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_rank"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" >

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/group_text_color"
            android:textSize="@dimen/textsize20" />

        <ImageView
            android:id="@+id/iv_rank_iamge_icon"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:src="@drawable/group_rank_first"
            android:visibility="gone" />
    </RelativeLayout>

    <com.tapc.platform.witget.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/rl_rank"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_head_portrait_normal"
        app:border_color="#ACAAAB"
        app:border_width="0.5dp" />

    <ImageView
        android:id="@+id/iv_rank_iamge_up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/civ_avatar" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_rank_iamge_up"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/group_text_color"
        android:textSize="@dimen/textsize20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_name"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_runner_distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/group_text_color"
            android:textSize="@dimen/textsize20" />

        <TextView
            android:id="@+id/tv_runner_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/group_text_color"
            android:textSize="@dimen/textsize20" />

        <TextView
            android:id="@+id/tv_runner_speed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/group_text_color"
            android:textSize="@dimen/textsize20" />

        <TextView
            android:id="@+id/tv_runner_calorie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/group_text_color"
            android:textSize="@dimen/textsize20" />
    </LinearLayout>

</RelativeLayout>