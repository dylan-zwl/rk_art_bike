<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group_bg_mian"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/group_text_color" >

        <RadioGroup
            android:id="@+id/rg_group_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_hotest_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/group_color_blue"
                android:button="@null"
                android:gravity="center"
                android:text="@string/group_info"
                android:textColor="@color/group_text_color"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rb_my_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/group_color_blue_light"
                android:button="@null"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/ranking_list"
                android:textColor="@color/group_text_color"
                android:textSize="24sp" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#405062"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="总人数"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/strength"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/group_button_up_color"
            android:text="@string/now_add"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>