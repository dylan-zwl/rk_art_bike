<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/background_top" >

    <Button
        android:id="@+id/program_prebutton"
        android:layout_width="@dimen/main_icon3_with"
        android:layout_height="@dimen/main_icon1_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pre" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/program7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/program_with"
                android:layout_height="@dimen/program_height"
                android:background="@drawable/program7"
                android:gravity="bottom|center_horizontal"
                android:text="@string/program_p07"
                android:textColor="#ffffff"
                android:textSize="@dimen/program_sel_size" />

            <Button
                android:id="@+id/program8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/program_with"
                android:layout_height="@dimen/program_height"
                android:layout_marginLeft="@dimen/program_magin_l"
                android:background="@drawable/program8"
                android:gravity="bottom|center_horizontal"
                android:text="@string/program_p08"
                android:textColor="#ffffff"
                android:textSize="@dimen/program_sel_size" />

            <Button
                android:id="@+id/program9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/program_with"
                android:layout_height="@dimen/program_height"
                android:layout_marginLeft="@dimen/program_magin_l"
                android:background="@drawable/program9"
                android:gravity="bottom|center_horizontal"
                android:text="@string/program_p09"
                android:textColor="#ffffff"
                android:textSize="@dimen/program_sel_size" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/program10"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/program_with"
                android:layout_height="@dimen/program_height"
                android:background="@drawable/program10"
                android:gravity="bottom|center_horizontal"
                android:text="@string/program_p10"
                android:textColor="#ffffff"
                android:textSize="@dimen/program_sel_size" />

            <Button
                android:id="@+id/program11"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/program_with"
                android:layout_height="@dimen/program_height"
                android:layout_marginLeft="@dimen/program_magin_l"
                android:background="@drawable/program11"
                android:gravity="bottom|center_horizontal"
                android:text="@string/program_p11"
                android:textColor="#ffffff"
                android:textSize="@dimen/program_sel_size" />

            <Button
                android:id="@+id/program12"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/program_with"
                android:layout_height="@dimen/program_height"
                android:layout_marginLeft="@dimen/program_magin_l"
                android:background="@drawable/program12"
                android:gravity="bottom|center_horizontal"
                android:text="@string/program_p12"
                android:textColor="#ffffff"
                android:textSize="@dimen/program_sel_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>