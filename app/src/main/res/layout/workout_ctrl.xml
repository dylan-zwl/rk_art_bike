<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:workout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/show_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:textColor="@android:color/white"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Sub"
            android:layout_width="40px"
            android:layout_height="40px"
            android:background="@drawable/sub" />

        <Button
            android:id="@+id/Add"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="60px"
            android:background="@drawable/add" />
    </LinearLayout>

    <com.tapc.platform.stardandctrl.WorkoutSeekBar
        android:id="@+id/seekbar"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12px"
        android:layout_marginTop="0px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:progressDrawable="@drawable/workoutseekbar_style"
        android:thumb="@drawable/seekbar_thumb"
        android:visibility="gone"
        workout:textColor="@android:color/black"
        workout:valueSize="18dp" />

    <com.tapc.platform.stardandctrl.WorkoutValue
        android:id="@+id/min_max"
        android:layout_width="150px"
        android:layout_height="18px"
        android:layout_marginLeft="12px"
        android:layout_marginTop="5px"
        android:visibility="gone"
        workout:textColor="@android:color/white"
        workout:unitSize="10sp" />

</LinearLayout>