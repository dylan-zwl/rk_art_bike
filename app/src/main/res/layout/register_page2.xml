<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_top" >

    <Button
        android:id="@+id/register_prebutton"
        android:layout_width="@dimen/main_icon3_with"
        android:layout_height="@dimen/main_icon1_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pre" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70px"
        android:text="@string/title_sure_register"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="203px"
        android:layout_marginTop="96px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_edit"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_nick_tx"
                android:layout_width="169px"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="@string/user_nick"
                android:textColor="@color/text_color1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/user_nick_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:background="@drawable/register_edit"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="169px"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="@string/user_weight"
                android:textColor="@color/text_color1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/user_weight_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px" >

            <Button
                android:id="@+id/select_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sex_down"
                android:text="@string/user_sex_man"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/select_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:background="@drawable/sex_up"
                android:text="@string/user_sex_woman"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page_flag_nosel" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page_flag_sel" />
    </LinearLayout>

    <Button
        android:id="@+id/sure_register"
        android:layout_width="180px"
        android:layout_height="186px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="98px"
        android:background="@drawable/sureregister"
        android:text="@string/sure_register"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold" >
    </Button>

</RelativeLayout>