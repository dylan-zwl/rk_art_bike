<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_top"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridView
            android:id="@+id/show_app_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/DIMEN_75PX"
            android:layout_marginLeft="@dimen/DIMEN_95PX"
            android:layout_marginRight="@dimen/DIMEN_95PX"
            android:layout_marginTop="@dimen/DIMEN_60PX"
            android:fadeScrollbars="true"
            android:gravity="center"
            android:numColumns="5"
            android:scrollbarFadeDuration="0"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/DIMEN_20PX"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/app_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sportsdata_btn"
                android:text="@string/app_exit"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/clear_app_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:background="@drawable/sportsdata_btn"
                android:text="@string/clear_app_data"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>