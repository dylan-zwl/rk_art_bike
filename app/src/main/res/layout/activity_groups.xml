<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group_bg_mian"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/ll_group_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_create_group"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/create_group_icon"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top" />

        <Button
            android:id="@+id/btn_create_group"
            android:layout_width="wrap_content"
            android:minWidth="180dp"
            android:layout_height="53dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/group_btn_selector"
            android:text="@string/create_groups"
            android:textColor="@color/group_text_color"
            android:textSize="@dimen/groups_button_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="244dp"
        android:layout_toRightOf="@id/ll_group_left"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
               android:id="@+id/iv_add_group"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/add_group_icon"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/main_tx_padding_top" />

        <Button
            android:id="@+id/btn_add_group"
            android:layout_width="wrap_content"
            android:minWidth="180dp"
            android:layout_height="53dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/group_btn_selector"
            android:text="@string/add_groups"
            android:textColor="@color/group_text_color"
            android:textSize="@dimen/groups_button_size" />
    </LinearLayout>

</RelativeLayout>