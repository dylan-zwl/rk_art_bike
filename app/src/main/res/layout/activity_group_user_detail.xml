<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group_bg_mian" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_centerInParent="true"
        android:src="@drawable/iv_avatar_bg2" />

    <ImageView
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_centerInParent="true"
        android:src="@drawable/iv_avatar_bg_small" />

    <com.tapc.platform.witget.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/add_private_group_icon" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/civ_avatar"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/civ_avatar"
        android:src="@drawable/iv_time" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/civ_avatar"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/civ_avatar"
        android:src="@drawable/iv_speed" />

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/civ_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/imageView3"
        android:layout_toRightOf="@id/imageView1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/group_text_color"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/civ_avatar"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/civ_avatar"
        android:src="@drawable/iv_distance" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/civ_avatar"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/civ_avatar"
        android:src="@drawable/iv_calorie" />

    <TextView
        android:id="@+id/tv_member_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civ_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/group_text_color"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_member_name"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16hour"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_member_name"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/imageView3"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/altitude"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5km/h"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_member_like"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80km"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignTop="@+id/tv_member_like"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calorie"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16kal"
            android:textColor="@color/group_text_color"
            android:textSize="24sp" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/rb_user_detail_like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_member_like"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/group_like_bg_selector"
        android:button="@null"
        android:gravity="center" />

</RelativeLayout>