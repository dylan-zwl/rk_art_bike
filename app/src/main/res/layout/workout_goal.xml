<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:workout="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/main_icon1_with"
    android:layout_height="@dimen/main_icon1_height"
    android:background="@drawable/goal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.tapc.platform.stardandctrl.WorkoutTitle
        android:id="@+id/totalTitle"
        android:layout_width="fill_parent"
        android:layout_height="40px"
        workout:textColor="@android:color/white"
        workout:titleName="目标时间"
        workout:titleSize="@dimen/workout_title_size"
        workout:unitName="min"
        workout:unitSize="10sp" />

    <ProgressBar
        android:id="@+id/goalProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140px"
        android:layout_height="15px"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progressDrawable="@drawable/workout_goal" />

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="@dimen/workout_value_size" />

</LinearLayout>