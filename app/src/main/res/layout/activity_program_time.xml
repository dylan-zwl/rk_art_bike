<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_top"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/program_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66px"
        android:gravity="center_horizontal"
        android:text="@string/program_time"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/program_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/program_time_title"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/program_time_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_activity_sub" />

        <SeekBar
            android:id="@+id/program_time_seekbar"
            android:layout_width="637px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:maxHeight="44px"
            android:minHeight="44px"
            android:paddingLeft="8px"
            android:paddingRight="8px"
            android:progressDrawable="@drawable/goal_time_seekbar_style"
            android:thumb="@drawable/goal_time_thumb" />

        <Button
            android:id="@+id/program_time_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_activity_add" />
    </LinearLayout>

    <Button
        android:id="@+id/program_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/program_time_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15px"
        android:layout_marginTop="60px"
        android:background="@drawable/program_start"
        android:text="@string/start"
        android:textColor="#ffffff"
        android:textSize="@dimen/start_size" />

</RelativeLayout>